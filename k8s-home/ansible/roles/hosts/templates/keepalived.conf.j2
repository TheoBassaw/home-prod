vrrp_script chk_rke2 {
    script "pgrep rke2"
    interval 5
    fall 2
    timeout 10
}

vrrp_instance VI_1 {
    state BACKUP
    interface zt0
    virtual_router_id 50
    priority 50
    advert_int 5
    virtual_ipaddress {
        {{ ansible_env.VIP }}/{{ ansible_env.OVERLAY_NETWORK | ansible.utils.ipaddr('prefix') }}
    }
    track_script {
        chk_rke2
    }
}