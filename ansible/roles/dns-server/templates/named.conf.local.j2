key "ddns-key.internal.paradisenetworkz.com" {
  algorithm hmac-sha512;
	secret "{{ TSIG_KEY | default(lookup('ansible.builtin.env', 'TSIG_KEY')) }}";
};

zone "internal.paradisenetworkz.com" {
  type master;
  file "/var/lib/bind/db.internal.paradisenetworkz.com";
  update-policy {
	  grant ddns-key.internal.paradisenetworkz.com zonesub ANY;
  };
};

zone "30.10.in-addr.arpa" {
  type master;
  file "/var/lib/bind/db.30.10.in-addr.arpa";
  update-policy {
	  grant ddns-key.internal.paradisenetworkz.com zonesub ANY;
  };
};