#jinja2:lstrip_blocks: True
options {
  directory "/var/cache/bind";
  dnssec-validation auto;
  auth-nxdomain no;

  listen-on port {{ bind_listen_port }} {
  {% for ip in bind_listen_address_v4 %}
    {{ ip }};
  {% endfor %}
  };
  
  {% if bind_allow_query is defined %}
  allow-query {
  {% for acl in bind_allow_query %}
    {{ acl }};
  {% endfor %}
  };
  {% endif %}
  
  {% if bind_allow_recursion is defined %}
  allow-recursion {
  {% for acl in bind_allow_recursion %}
    {{ acl }};
  {% endfor %}
  };
  {% endif %}
  
  {% if bind_forwarders is defined %}
  forwarders {
  {% for ip in bind_forwarders %}
    {{ ip }};
  {% endfor %}
  };
  {% endif %}
};